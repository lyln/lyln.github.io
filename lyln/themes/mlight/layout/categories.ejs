 <div class="archive">
 <h2 class="archive-title<% if (page.tag){ %> tag<% } else if (page.category){ %> category<% } %>"><%= page.title %></h2>
        <% if(site.categories.length) { %>
		<article class="post">
			<div class="post-content">
				<header>
            			<div class="icon"></div>
					<% if (site.categories.length){ %>
					  <ul class="entry">
					  <% site.categories.sort('name').each(function(item){ %>
					    <li><a href="<%- config.root %><%- item.path %>"><%= item.name %></a><small><%= item.posts.length %></small></li>
					  <% }); %>
					  </ul>
					<% } %>
				</header>
			</div>
		</article>
        <% } %>
 </div>

